<?xml version="1.0" encoding="utf-8" ?>

<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="CustomCommands">
   <CommandPrefix> Listen Here </CommandPrefix>
    <Example> Shut down, Hibernate </Example>
    
    <Command Name="ShutDown">
      <Example> shut down, power off, I'm going to bed </Example>    
      
      <ListenFor>Shut down</ListenFor>
      <ListenFor>Power off</ListenFor>
      <ListenFor>I'm going to bed</ListenFor>
    
       <!-- this starts with "Alright" or "Okay" or something -->
      <Feedback> I'll shut myself off now. </Feedback>
      <Navigate/>    
      
    </Command>

    <Command Name="Hibernate">
      <Example> go to sleep, hibernate, suspend </Example>    
      
      <ListenFor> go to sleep </ListenFor>
      <ListenFor> hibernate</ListenFor>
      <ListenFor> suspend</ListenFor>
    
      <Feedback> I'll go to sleep now. </Feedback>
      <Navigate/>    
      
    </Command>
    
    
